{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": [
    "**/dist/*.js",
    "**/vendor/*.js"
  ],
  "rules": {
    "semi": [
      2,
      "never"
    ]
  }
}